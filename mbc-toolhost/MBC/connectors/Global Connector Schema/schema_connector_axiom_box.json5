{
  // Axioms governing a connector family
  $schema: "https://json-schema.org/draft-07/schema#",
  title: "MBC Connector Axiom Box",
  type: "object",

  properties: {
    schema_version: { type: "string" },
    family_id: { type: "string" },
    family_name: { type: "string" },

    axioms: {
      type: "array",
      items: {
        type: "object",
        properties: {
          axiom_id: { type: "string" },
          label: { type: "string" },
          statement: { type: "string" },   // informal or symbolic statement
          form: {
            type: "string",
            enum: ["equation", "sequent", "predicate", "narrative"],
          },

          scope: {
            type: "string",
            enum: ["local", "family", "cross-tier", "global"],
          },

          involves_connectors: {
            type: "array",
            items: { type: "string" },   // connector IDs
          },

          invariants_ref: {
            type: "array",
            items: { type: "string" },   // Ω/Θ/χ/ρ invariants
          },

          // Optional: machine-friendly version of the axiom
          formalization: {
            type: "object",
            additionalProperties: true,
          },
        },
        required: ["axiom_id", "label", "statement"],
      },
    },
  },

  required: ["schema_version", "family_id", "axioms"],
}
