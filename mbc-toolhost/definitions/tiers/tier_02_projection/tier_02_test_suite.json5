    {
      "id": "T20_dual_modal_box_schema",
      "description": "Verify the agent can construct a DualModalSubstrateBox with IGS/OA ports.",
      "inputs": [
        "MakeDualModalSubstrate"
      ],
      "expected": "pass_if_result_has_ports_[port_igs,port_oa]"
