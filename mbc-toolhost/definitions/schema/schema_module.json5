{
  $schema: "https://json-schema.org/draft/2020-12/schema",
  title: "MBC Module Pack Schema",
  type: "object",

  required: ["modules"],

  properties: {
    modules: {
      type: "array",
      items: {
        type: "object",
        required: ["name", "purpose", "components"],
        properties: {
          name: { type: "string" },
          purpose: { type: "string" },

          components: {
            type: "array",
            items: { type: "string" }
          },

          dependencies: {
            type: "array",
            items: { type: "string" }
          }
        }
      }
    }
  }
}
