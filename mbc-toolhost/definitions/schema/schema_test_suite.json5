{
  $schema: "https://json-schema.org/draft/2020-12/schema",
  title: "MBC Test Suite Schema",
  type: "object",

  required: ["tests"],

  properties: {
    tests: {
      type: "array",
      items: {
        type: "object",
        required: ["id", "type", "input", "expected"],
        properties: {
          id: { type: "string" },

          type: {
            type: "string",
            enum: [
              "operator",
              "rewrite",
              "interaction",
              "invariant",
              "normal_form",
              "self_diagnostic"
            ]
          },

          input: { type: "string" },
          expected: { type: "string" },

          notes: { type: "string" }
        }
      }
    }
  }
}
